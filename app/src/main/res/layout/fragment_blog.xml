<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewBlog"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/donut" />

    <TextView
        android:id="@+id/textViewBlogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Blog Title"
        android:textAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- ScrollView containing TextView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textViewBlogDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:text="This is a TextView before the WebView. Add many lines of text here to make it scrollable. This is a TextView before the WebView. Add many lines of text here to make it scrollable. This is a TextView before the WebView. Add many lines of text here to make it scrollable."
            android:padding="8dp" />
    </ScrollView>

    <Button
        android:id="@+id/shareButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#131315"
        android:text="Share"
        android:textColor="#FFE85D22"
        android:textStyle="bold" />
</LinearLayout>
